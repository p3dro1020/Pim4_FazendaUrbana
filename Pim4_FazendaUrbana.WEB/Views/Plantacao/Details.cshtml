@model Pim4_FazendaUrbana.DATA.Models.Plantacao

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Verificando dados de plantação</h1>

<div>
    <h4>@Html.DisplayFor(model => model.NomeHortalica)</h4>
    <hr />
    <div>
        <a asp-action="Edit" class="btn btn-success" asp-route-id="@Model?.IdPlantio">Alterar</a>
        <a asp-action="Index" class="btn btn-primary">Voltar</a>
    </div>
    <br />
    <div class="form-group">
        <label>@Html.DisplayNameFor(model => model.NomeHortalica)</label>
        <input disabled class="form-control" value="@Html.DisplayFor(model => model.NomeHortalica)" />
    </div>
    <div class="form-group">
        <label>@Html.DisplayNameFor(model => model.DataPlantio)</label>
        <input disabled class="form-control" value="@Html.DisplayFor(model => model.DataPlantio)" />
    </div>
    <div class="form-group">
        <label>@Html.DisplayNameFor(model => model.DataColheita)</label>
        <input disabled class="form-control" value="@Html.DisplayFor(model => model.DataColheita)" />
    </div>
    <div class="form-group">
        <label>@Html.DisplayNameFor(model => model.Qtd)</label>
        <input disabled class="form-control" value="@Html.DisplayFor(model => model.Qtd)" />
    </div>
    <div class="form-group">
        <label>@Html.DisplayNameFor(model => model.Status)</label>
        <input disabled class="form-control" value="@Html.DisplayFor(model => model.Status)" />
    </div>
</div>

